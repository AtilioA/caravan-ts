{
  "name": "caravan-ts",
  "version": "0.1.0",
  "description": "A TypeScript module implementing the game logic for Caravan, a card game from Fallout: New Vegas, allowing developers to integrate it into various applications or environments.",
  "main": "index.ts",
  "scripts": {
    "test": "jest --coverage",
    "test:coverage": "jest --coverage",
    "build": "tsc",
    "start": "node ./dist/index.js",
    "doc": "typedoc",
    "play": "npx tsc && node ./play.js",
    "lint": "eslint . --ext .ts,.tsx",
    "docs": "typedoc --options typedoc.json"
  },
  "author": "AtilioA",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "jest": "^29.7.0",
    "jest-mock-extended": "^3.0.5",
    "ts-jest": "^29.1.1",
    "typedoc": "^0.25.2",
    "typescript": "^5.2.2"
  }
}
